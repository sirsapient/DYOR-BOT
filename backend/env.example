# DYOR BOT Backend Environment Variables
# Copy this file to .env and fill in your actual API keys

# Required - Anthropic Claude API Key (for AI orchestration)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Optional - Search API (currently using free DuckDuckGo, but SerpAPI can be used as backup)
SERP_API_KEY=your_serp_api_key_here

# Optional - Cryptocurrency Data APIs
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Optional - Blockchain Explorer APIs
ETHERSCAN_API_KEY=your_etherscan_api_key_here
SNOWTRACE_API_KEY=your_snowtrace_api_key_here

# Optional - Gaming APIs
IGDB_CLIENT_ID=your_igdb_client_id_here
IGDB_CLIENT_SECRET=your_igdb_client_secret_here

# Optional - YouTube API (for video content analysis)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional - NFT Marketplace APIs
OPENSEA_API_KEY=your_opensea_api_key_here
MAGIC_EDEN_API_KEY=your_magic_eden_api_key_here

# Server Configuration
PORT=4000
NODE_ENV=development
